
<h1> Your reservation </h1>

<ul>
  <li> from <%= @reservation.start_date%> to <%= @reservation.end_date%> </li>
  <li> Your bike: <%= @reservation.bike.description %> </li>
  <li> Total price: <%= @reservation.price %> </li>
</ul>



<% if policy(@reservation).destroy? %>
  <div class ="btn btn-primary">
    <%= link_to "Delete", reservation_path(reservation), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
<% end %>
