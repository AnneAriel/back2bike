<h1>New reservation</h1>



<%=simple_form_for [@bike, @reservation] do |f|%>
<%= f.input :start_date %>
<%= f.input :end_date %>
<%#= f.label ? afficher le price%>
<%#= f.label ((@reservation.end_date - @reservation.start_date) * @reservation.bike.daily_price).to_i :price %>
