<h1>New bike</h1>

<%= simple_form_for(@bike) do |f| %>
  <%= f.input :name %>
  <%= f.label :category %>
  <%= f.select :category, ["VTT","Electric","Mountain","BMX","Family","Atypical", "Kids"] %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :daily_price %>
  <%= f.input :photo, as: :file %>
  <%= f.submit %>
<% end %>
