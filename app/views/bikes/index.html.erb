
<h1>Our bikes</h1>


<ul>
  <% @bikes.each do |bike| %>
    <li><%= bike.category%></li>
    <li><%= bike.description %></li>
    <li><%= bike.address %></li>
    <li><%= bike.daily_price %></li>
    <li><%= link_to "See the bike", bike_path(bike)%></li>
  <%end%>
</ul>

<%= link_to "Add a bike", new_bike_path %>


<div class="container">
<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
